<?xml version="1.0" encoding="UTF-8"?>
<skin compatible="alto-1.1">
    <name>
        <lang name="default">Experience Simple</lang>
    </name>
    <author>
        <lang name="default">Команда разработчиков Alto CMS</lang>
    </author>
    <homepage>http://altocms.ru</homepage>
    <version>1.0.0</version>
    <requires>
        <alto>
            <version>1.1.0b</version>
        </alto>
        <system>
            <php>5.3.0</php>
        </system>
